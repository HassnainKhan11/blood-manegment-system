@model IEnumerable<BloodBankManegmentSystem.Models.Donors>
@{
    ViewBag.Title = "Sample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sample List</h2>
<table id ="donors" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Blood Group</th>
            <th>Donated By</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#donors").DataTable({
                ajax: {
                    url: "/api/donors",
                    dataSrc: ""
                },
                columns: [
                {
                        data: "BloodTypeId",
                        render: function (data, type, donor) {
                            switch (data) {
                                case 1:
                                    return "A+"
                                case 2:
                                    return "A-"
                                case 3:
                                    return "B+"
                                case 4:
                                    return "B-"
                                case 5:
                                    return "O+"
                                case 6:
                                    return "O-"
                                case 7:
                                    return "AB+"
                                case 8:
                                    return "AB-"
                                default:
                                    return "Invalid"
                            }
                        }
                    },
                    {
                        data: "name",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-donor-id =" + data + ">Delete</button>";
                        }
                    }
                ]
            });
            $("#donors").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this donor?", function (result) {
                    if (result) {
                        table.row(button.parents("tr")).remove().draw();
                        ;
                    }
                });
            });
        });
    </script>
    }